<body onload="populateFormElements()">
<form method="POST" action="/resume">
<img src = "/pcilogo.png" alt = "PCI Logo">

<!-- Creates table in the same format as one-page PCI resumes -->
<table>
<tr bgcolor = "#cc0000">
	<th colspan = "5", style = "color:white;">NAME: <input type="text"  value= "<%= info.user_name %>" readonly/></th>
</tr>

<div class ="name section">
<tr>
<!-- Add Work Role section -->
	<th style = "color:black;">Work Role</th>
	<th> <input type="text"  style = "border:none;" value= "<%= info.work_role %>" readonly/></th>
	

<!-- Add Security Clearances section -->

  <th rowspan = "2">Security Clearances (Highest Level)</th>
  <td rowspan = "2", colspan = "2">
    <table id="clearanceTable" style="height:50px">
      <tr>
	  <td><select name = "clearance" id="clearance">
